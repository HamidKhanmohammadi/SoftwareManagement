<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#3f3f3f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebe7e2"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="128dp"
                android:id="@+id/img_logo"
                android:src="@android:mipmap/sym_def_app_icon"
                android:scaleType="centerInside"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/txt_name"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical|right"
                    android:layout_weight="0.333"
                    android:autoText="false"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/txt_author"
                    android:textColor="#191b16"
                    android:textSize="22dp"
                    android:layout_gravity="right|center_horizontal"
                    android:gravity="center_vertical|right"
                    android:layout_weight="0.333"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_end_date"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_start_date"
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:textSize="22dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_startup_date"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_design_language"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_db_language"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_ip"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_location_server"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_phone"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="64dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_email"
                        android:gravity="center_vertical|right"
                        android:textSize="22dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="توضیحات"
                        android:textSize="26dp"
                        android:background="#3f0260"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/txt_desc"
                        android:textSize="22dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
